<!-- Templates for authentication state -->
<template id="logged-in-template">
    <div class="dropdown dropdown-end">
        <div tabindex="0" role="button" class="btn btn-ghost btn-circle avatar placeholder">
            <div class="avatar-content">
                <!-- Will be replaced with either image or initial -->
            </div>
        </div>
        <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52">
            <li>
                <a href="/account" class="justify-between">
                    Profile
                    <span class="badge user-badge">User</span>
                </a>
            </li>
            <li><a href="/account/orders">Orders</a></li>
            <li><a href="/account/wishlist">Wishlist</a></li>
            <li class="admin-panel-item" style="display: none;">
                <a href="/admin">Admin Panel</a>
            </li>
            <li>
                <button id="logout-btn" class="w-full text-left text-error">Logout</button>
            </li>
        </ul>
    </div>
</template>

<template id="logged-out-template">
    <a href="/login" class="btn btn-primary btn-sm">Login</a>
</template>

<script>
    import { pb } from '../lib/pocketbase';

    // Function to render the appropriate auth state UI
    function renderAuthState() {
        const authContainer = document.getElementById('auth-container');
        if (!authContainer) return;

        const isLoggedIn = pb.authStore.isValid;

        if (isLoggedIn) {
            const user = pb.authStore.model;
            const template = document.getElementById('logged-in-template');
            const clone = template.content.cloneNode(true);

            // Set avatar or initial
            const avatarContent = clone.querySelector('.avatar-content');
            if (user.avatar) {
                avatarContent.innerHTML = `<div class="w-10 rounded-full">
                    <img src="http://127.0.0.1:8090/api/files/users/${user.id}/${user.avatar}" alt="${user.name || 'User avatar'}" />
                </div>`;
            } else {
                const initial = (user.name || user.email || '?').charAt(0).toUpperCase();
                avatarContent.innerHTML = `<div class="bg-neutral-focus text-neutral-content rounded-full w-10">
                    <span>${initial}</span>
                </div>`;
            }

            // Set admin badge if applicable
            const userBadge = clone.querySelector('.user-badge');
            if (userBadge) {
                userBadge.textContent = user.isAdmin ? 'Admin' : 'User';
            }

            // Show admin panel link if user is admin
            const adminPanelItem = clone.querySelector('.admin-panel-item');
            if (adminPanelItem && user.isAdmin) {
                adminPanelItem.style.display = 'block';
            }

            // Clear and append
            authContainer.innerHTML = '';
            authContainer.appendChild(clone);

            // Add logout handler
            const logoutBtn = document.getElementById('logout-btn');
            if (logoutBtn) {
                logoutBtn.addEventListener('click', () => {
                    pb.authStore.clear();
                    window.location.reload();
                });
            }
        } else {
            const template = document.getElementById('logged-out-template');
            const clone = template.content.cloneNode(true);

            // Clear and append
            authContainer.innerHTML = '';
            authContainer.appendChild(clone);
        }
    }

    // Initial render
    document.addEventListener('DOMContentLoaded', renderAuthState);

    // Listen for auth state changes
    pb.authStore.onChange(() => {
        renderAuthState();
    });
</script>
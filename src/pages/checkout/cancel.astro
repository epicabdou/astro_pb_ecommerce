---
import MainLayout from '../../layouts/MainLayout.astro';
import { cartStore } from '../../stores/cartStore';
---

<MainLayout>
  <div class="container mx-auto px-4 py-12">
    <div class="max-w-lg mx-auto card bg-base-100 shadow-lg">
      <div class="card-body">
        <div class="text-center mb-6">
          <div class="text-warning text-6xl mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-16 h-16 mx-auto">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126ZM12 15.75h.007v.008H12v-.008Z" />
            </svg>
          </div>
          <h1 class="text-3xl font-bold mb-2">Checkout Cancelled</h1>
          <p class="text-base-content/70">Your order has been cancelled and you have not been charged.</p>
        </div>

        <div class="py-4 text-center">
          <p>Your items are still in your cart if you wish to complete your purchase later.</p>
        </div>

        <div class="card-actions justify-center mt-6">
          <a href="/cart" class="btn btn-primary">Return to Cart</a>
          <a href="/" class="btn btn-outline">Continue Shopping</a>
        </div>
      </div>
    </div>
  </div>
</MainLayout>